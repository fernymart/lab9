<%- include ("./partials/_header") %>
<main role="main" class="container">
    <div class="row">
        <div class="col-md-8 blog-main">
            <h2 class="blog-post-title">Edit Post</h2>
            <form action="/edit/<%= editPost._id%>" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="<%= editPost.title %>" value="<%= editPost.title %>">
                </div>
                <div class="form-group">
                    <input type="text" name="author" class="form-control" placeholder="<%= editPost.author %>" value="<%= editPost.author %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="post_data" cols="100" rows="10"><%= editPost.post_data %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Edit Post</button>
            </form>
        </div>
    </div>
</main>
<%- include ("./partials/_footer") %>