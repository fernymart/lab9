<%- include ("./partials/_header") %>
<main role="main" class="container">
    <div class="row">
        <div class="col-md-8 blog-main">
            <h2 class="blog-post-title">Are you sure you want to delete this post?</h2>
            <form action="/delete/<%= delPost._id%>" method="POST">
                <div class="form-group">
                    <input readonly type="text" class="form-control" name="title" placeholder="<%= delPost.title %>">
                </div>
                <div class="form-group">
                    <input readonly type="text" name="author" class="form-control" placeholder="<%= delPost.author %>">
                </div>
                <div class="form-group">
                    <textarea readonly class="form-control" name="post_data" cols="100" rows="10"><%= delPost.post_data %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">I'm sure I want to delete this post</button>
            </form>
        </div>
    </div>
</main>
<%- include ("./partials/_footer") %>